{
    "compilerOptions": {
        "module": "commonjs",   //指定生成哪个模块系统代码
        "target": "es6",        //目标代码类型
        "rootDir":"./src",      //仅用来控制输出的目录结构--outDir。
        "outDir":"./build",      //重定向输出目录。
        "sourceMap": true
    },
    "include":[
        "./src/**/*"
    ],
    "exclude":[
        "views",
        "static",
        "node_modules",
        "build",
        ".vscode"
    ]
}